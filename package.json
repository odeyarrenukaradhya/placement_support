{
  "name": "placement-support-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev:backend & npm run dev:student & npm run dev:tpo & npm run dev:admin",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:student": "npm run dev --workspace=apps/student-app",
    "dev:tpo": "npm run dev --workspace=apps/tpo-app",
    "dev:admin": "npm run dev --workspace=apps/super-admin-app",
    "install:all": "npm install"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.0.0-alpha.25",
    "@types/nodemailer": "^7.0.5",
    "babel-plugin-react-compiler": "1.0.0",
    "tailwindcss": "4.0.0-alpha.25"
  },
  "dependencies": {
    "nodemailer": "^7.0.12"
  }
}
